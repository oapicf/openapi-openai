"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "openapi_server CompletionUsage"
package     = openapi_server
version     = "1.0"
description = "Defines a CompletionUsage"
authors     = ["F. Bar (foo@bar.baz)"]

imports {
  Root = tosca.resourceTypes.Root
  CompletionUsageCompletionTokensDetails = openapi_server.resourceTypes.CompletionUsageCompletionTokensDetails
  CompletionUsagePromptTokensDetails = openapi_server.resourceTypes.CompletionUsagePromptTokensDetails
}
resourceTypes {

  CompletionUsage {
    title = CompletionUsage
    description = CompletionUsage
    derivedFrom = Root
    properties {
        completion_tokens {
          type =  integer
          description = "Number of tokens in the generated completion."
          optional = true
        }
        prompt_tokens {
          type =  integer
          description = "Number of tokens in the prompt."
          optional = true
        }
        total_tokens {
          type =  integer
          description = "Total number of tokens used in the request (prompt + completion)."
          optional = true
        }
        completion_tokens_details {
          type = CompletionUsageCompletionTokensDetails
          description = ""
          optional = false
        }
        prompt_tokens_details {
          type = CompletionUsagePromptTokensDetails
          description = ""
          optional = false
        }
    }
  }
}

serviceTemplates {

  CompletionUsage {
    title = CompletionUsage
    description = CompletionUsage
    implements = openapi_server.resourceTypes.CompletionUsage

  }
}
