"$schema"   = "http://cyaninc.com/json-schemas/tosca-lite-v1/definition-module#"
title       = "openapi_server RealtimeConversationItem"
package     = openapi_server
version     = "1.0"
description = "Defines a RealtimeConversationItem"
authors     = ["F. Bar (foo@bar.baz)"]

imports {
  Root = tosca.resourceTypes.Root
  RealtimeConversationItemContentInner = openapi_server.resourceTypes.RealtimeConversationItemContentInner
}
resourceTypes {

  RealtimeConversationItem {
    title = RealtimeConversationItem
    description = RealtimeConversationItem
    derivedFrom = Root
    properties {
        id {
          type =  string
          description = "The unique ID of the item, this can be generated by the client to help  manage server-side context, but is not required because the server will  generate one if not provided. "
          optional = false
        }
        type {
          type =  string
          description = "The type of the item (&#x60;message&#x60;, &#x60;function_call&#x60;, &#x60;function_call_output&#x60;). "
          enum = ["message", "function_call", "function_call_output"]
          optional = false
        }
        object {
          type =  string
          description = "Identifier for the API object being returned - always &#x60;realtime.item&#x60;. "
          enum = ["realtime.item"]
          optional = false
        }
        status {
          type =  string
          description = "The status of the item (&#x60;completed&#x60;, &#x60;incomplete&#x60;). These have no effect  on the conversation, but are accepted for consistency with the  &#x60;conversation.item.created&#x60; event. "
          enum = ["completed", "incomplete"]
          optional = false
        }
        role {
          type =  string
          description = "The role of the message sender (&#x60;user&#x60;, &#x60;assistant&#x60;, &#x60;system&#x60;), only  applicable for &#x60;message&#x60; items. "
          enum = ["user", "assistant", "system"]
          optional = false
        }
        content {
          type = array
          items.type = RealtimeConversationItemContentInner
          description = "The content of the message, applicable for &#x60;message&#x60; items.  - Message items of role &#x60;system&#x60; support only &#x60;input_text&#x60; content - Message items of role &#x60;user&#x60; support &#x60;input_text&#x60; and &#x60;input_audio&#x60;    content - Message items of role &#x60;assistant&#x60; support &#x60;text&#x60; content. "
          optional = false
        }
        call_id {
          type =  string
          description = "The ID of the function call (for &#x60;function_call&#x60; and  &#x60;function_call_output&#x60; items). If passed on a &#x60;function_call_output&#x60;  item, the server will check that a &#x60;function_call&#x60; item with the same  ID exists in the conversation history. "
          optional = false
        }
        name {
          type =  string
          description = "The name of the function being called (for &#x60;function_call&#x60; items). "
          optional = false
        }
        arguments {
          type =  string
          description = "The arguments of the function call (for &#x60;function_call&#x60; items). "
          optional = false
        }
        output {
          type =  string
          description = "The output of the function call (for &#x60;function_call_output&#x60; items). "
          optional = false
        }
    }
  }
}

serviceTemplates {

  RealtimeConversationItem {
    title = RealtimeConversationItem
    description = RealtimeConversationItem
    implements = openapi_server.resourceTypes.RealtimeConversationItem

  }
}
